def start_board():
  ip = mycontext['myIP']
  port = mycontext['myPort']
  print "Listening on IP " + str(ip) +" port " + str(port)
  try:
    listencommhandle = waitforconn(ip,port,board)
  except Exception, e:
    print ("Exception in start_board: %s, %s\n" %(type(e), e))
    raise

# ------------------------------------------------------------------------------
# Called when an incoming message is received.
# ------------------------------------------------------------------------------
def board(remoteIP, remotePort, sockobj, thiscommhandle, listencommhandle):
  try:
    msgheader = sockobj.recv(1024) # Receive message,
    # React depending on message type: HTTP GET or POST, or some other type of communication.
    if msgheader.startswith( 'GET' ):
      refresh_page(sockobj)
      stopcomm(thiscommhandle)

    elif msgheader.startswith( 'POST' ):
      print "got POST:\n", msgheader
      mycontext['seqNumber'] += 1
      msg = msgheader[4 :msgheader.find('comment')] + 'SEQ: ' + str(mycontext['seqNumber']) + "\n" + msgheader[msgheader.find('comment'): ]
      msg = 'BOARD_UPDATE' + msg

      mycontext['lock'].acquire()
      vesselIPs = mycontext['iplist']
      for ipaddr in vesselIPs:
        if not ipaddr == mycontext['myIP']:
          socketobject = openconn(ipaddr, mycontext['myPort'])
          socketobject.send(msg)

      mycontext['lock'].release()
      addMessageToBoard(msgheader, mycontext['seqNumber'], remoteIP)
      refresh_page(sockobj)
      stopcomm(thiscommhandle)

    #Receive a board update from the posting vessel
    elif msgheader.startswith('BOARD_UPDATE'):
      print "got BOARD_UPDATE:\n", msgheader
      seqNumber = int(msgheader[msgheader.find('SEQ: ') + 4 : msgheader.find('comment')])

      addMessageToBoard(msgheader, seqNumber, remoteIP)
      stopcomm(thiscommhandle)

    else:
      print "got something:\n", msgheader
      stopcomm(thiscommhandle)

  except Exception, e:
    print "Exception in board: %s, %s\n" %(type(e), e)
    raise

# Returns True if ip1 is greater than ip2
def compareIPaddresses(ip1, ip2):
  if ip1 == ip2:
    return 0
  elif ip1 > ip2:
    return 1
  else:
    return -1

# Helper function to convert IP to int
def ipToInt(ipaddr):
  ipInt = ''
  for octet in ipaddr.split('.'):
    ipInt += octet
  return int(ipInt)

def getKey(msgTuple):
  return msgTuple[0]

# Takes the recieved message and adds it to the list of board messages.
def addMessageToBoard(msgheader, seqNumber, remoteIP):
  msg = msgheader[msgheader.find('comment') + 8: ]
  # Increment sequence number
  if seqNumber > mycontext['seqNumber']:
     mycontext['seqNumber'] += 1

  boardMessages = mycontext['boardMessages']
  if seqNumber in boardMessages:
    boardMessages[seqNumber].append((ipToInt(remoteIP), msg))
    boardMessages[seqNumber].sort(boardMessages[seqNumber], compareIPaddresses(), key = getKey())

  else:
    boardMessages[seqNumber] = [(ipToInt(remoteIP), msg)]

# Refreshes the page and sends an acknowledgement to the browser
def refresh_page(sockobj):
  htmlresponse = generate_html_page()
  sockobj.send("HTTP/1.1 200 OK\r\nContent-type: text/html\r\n" + \
  "Content-length: %i\r\n\r\n%s" % (len(htmlresponse), htmlresponse))

# ------------------------------------------------------------------------------
# Outputs the blackboard html
# ------------------------------------------------------------------------------
def generate_html_page():
  entry = ""
  boardMessages = mycontext['boardMessages']
  if boardMessages == {}:
    entry = "Empty..."
  else:
    msgKeys = boardMessages.keys()
    msgKeys.sort(reverse = True)
    for seqNumber in msgKeys:
      if not boardMessages[seqNumber] == []:
        print boardMessages[seqNumber]
        for msg in boardMessages[seqNumber]:
          entry += '%s IP: %i <br>' %(msg[1], msg[0])

  content ='<div class="entry">%s</div>' %( entry )
  # dynamic title showing Ip address, port and up time.
  board_title = '<div id="boardtitle_placeholder" class="boardtitle">Board contents at host: %s:%u, up time: %u sec.</div>' %(mycontext['myIP'], mycontext['myPort'], int(getruntime()))
  # merging the contents of the board with the title
  # and wrapping all with <div id="boardcontents_placeholderâ€>...</div>
  content = '<div id="boardcontents_placeholder">%s%s</div>' %(board_title, content)
  #Concatenate strings into huge string representing the final html
  content = "".join([mycontext['headerhtml'], content, mycontext['footerhtml']])
  return content

